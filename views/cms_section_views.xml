<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===================== SECTION CONTENT ===================== -->
    
    <!-- Content Tree View -->
    <record id="view_cms_section_content_list" model="ir.ui.view">
        <field name="name">jasper.cms.section.content.list</field>
        <field name="model">jasper.cms.section.content</field>
        <field name="arch" type="xml">
            <list string="Section Contents">
                <field name="name"/>
                <field name="subtitle"/>
                <field name="title_normal"/>
                <field name="title_highlight"/>
                <field name="cta_text"/>
            </list>
        </field>
    </record>

    <!-- Content Form View -->
    <record id="view_cms_section_content_form" model="ir.ui.view">
        <field name="name">jasper.cms.section.content.form</field>
        <field name="model">jasper.cms.section.content</field>
        <field name="arch" type="xml">
            <form string="Section Content">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Text Content" name="text">
                            <group>
                                <group string="Decorative">
                                    <field name="background_text" placeholder="JASPER"/>
                                </group>
                                <group string="Badge">
                                    <field name="badge_text" placeholder="New Arrival"/>
                                    <field name="badge_icon"/>
                                </group>
                            </group>
                            <group>
                                <group string="Titles">
                                    <field name="subtitle" placeholder="The November Edit"/>
                                    <field name="title_normal" placeholder="Polished"/>
                                    <field name="title_highlight" placeholder="Landscape Jasper."/>
                                </group>
                                <group string="Call to Action">
                                    <field name="cta_text" placeholder="Shop Now"/>
                                    <field name="cta_sub_text" placeholder="Limited Availability"/>
                                    <field name="cta_href" placeholder="/product/prod-5"/>
                                </group>
                            </group>
                            <group string="Description">
                                <field name="description" nolabel="1" placeholder="Sculpture of polished Landscape Jasper..."/>
                            </group>
                        </page>
                        <page string="Image" name="image">
                            <group>
                                <group string="Image Upload">
                                    <field name="image" widget="image"/>
                                    <field name="image_filename" invisible="1"/>
                                </group>
                                <group string="Image Settings">
                                    <field name="image_src" placeholder="/producto5.png"/>
                                    <field name="image_alt" placeholder="Polished Landscape Jasper"/>
                                    <field name="show_badge"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Content Action -->
    <record id="action_cms_section_content" model="ir.actions.act_window">
        <field name="name">Section Contents</field>
        <field name="res_model">jasper.cms.section.content</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ===================== SECTIONS ===================== -->
    
    <!-- Section Tree View -->
    <record id="view_cms_section_list" model="ir.ui.view">
        <field name="name">jasper.cms.section.list</field>
        <field name="model">jasper.cms.section</field>
        <field name="arch" type="xml">
            <list string="Sections">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="section_id"/>
                <field name="section_type" widget="badge" decoration-info="section_type == 'hero'" decoration-success="section_type == 'feature'" decoration-warning="section_type == 'brand_story'"/>
                <field name="layout"/>
                <field name="page_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Section Form View -->
    <record id="view_cms_section_form" model="ir.ui.view">
        <field name="name">jasper.cms.section.form</field>
        <field name="model">jasper.cms.section</field>
        <field name="arch" type="xml">
            <form string="Section">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group string="Section Info">
                            <field name="name"/>
                            <field name="section_id" placeholder="hero-section-01"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="Configuration">
                            <field name="section_type"/>
                            <field name="layout"/>
                            <field name="page_id"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content_id" context="{'default_name': name}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Section Kanban View -->
    <record id="view_cms_section_kanban" model="ir.ui.view">
        <field name="name">jasper.cms.section.kanban</field>
        <field name="model">jasper.cms.section</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="section_type">
                <field name="name"/>
                <field name="section_type"/>
                <field name="layout"/>
                <field name="content_id"/>
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bold fs-5"/>
                        <div class="text-muted">
                            <field name="section_id"/>
                        </div>
                        <div class="mt-2">
                            <field name="section_type" widget="badge"/>
                            <field name="layout" widget="badge" class="ms-1"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Section Action -->
    <record id="action_cms_section" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">jasper.cms.section</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first content section
            </p>
            <p>
                Sections include Hero banners, Feature sections, and Brand stories.
            </p>
        </field>
    </record>
</odoo>
